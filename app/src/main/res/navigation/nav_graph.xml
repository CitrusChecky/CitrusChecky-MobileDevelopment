<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/infoFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rivaphys.citruschecky.ui.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_infoFragment"
            app:destination="@id/infoFragment"/>

        <action
            android:id="@+id/action_homeFragment_to_hasilDeteksiActivity"
            app:destination="@id/hasilDeteksiActivity" />
    </fragment>

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.rivaphys.citruschecky.ui.fragment.InfoFragment"
        android:label="Information"
        tools:layout="@layout/fragment_info">

        <action
            android:id="@+id/action_infoFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>

    </fragment>

    <activity
        android:id="@+id/hasilDeteksiActivity"
        android:name="com.rivaphys.citruschecky.ui.activity.HasilDeteksiActivity"
        android:label="Hasil Deteksi" />

</navigation>